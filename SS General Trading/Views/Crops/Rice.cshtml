
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Rice";
}

<link href="~/Content/submenu.css" rel="stylesheet" />
<link href="~/Content/sidebar.css" rel="stylesheet" />
<style>
    #single-product p{
    line-height: 30px;
}
#single-product .row{
    margin: 30px auto !important;
}


</style>
<div class="top-sub">
    <h1>Rice</h1>
</div>

<section id="single-product">
    <div class="container">
        <div class="col-md-8 col-sm-8">
            <div id="myCarouse" class="carousel slide" data-ride="carousel" data-interval="5000">
                <!-- Indicators -->
                @*<ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>*@

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/products/rice.jpg" class="img-responsive" />
                    </div>

                    <div class="item">
                        <img src="~/Content/beverge/rr.jpg" />
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarouse" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarouse" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">
                <h3>&nbsp;&nbsp; Rice</h3><hr />
                <p class="col-md-8">
                    SS General Trading is a market leader by providing the highest quality rice. This is to be achieved by building long term relationships with customers while using innovation and investment in leading-edge technology to work towards providing complete solutions
                </p>
                <p class="col-md-8">
                    Pakistani rice is very popular around the different countries Basmati rice is well known and we are the main exporter of Basmati rice it has delicious in taste and baked well.
                </p>
            </div><hr />
        </div>
        <div class="col-md-4 col-sm-8 sidebar">
            <div class="row">
                <h3>Find what you need</h3>
            </div>
            <div class="endLine"></div>
            <h3>Product Categories</h3>
            <div class="endLine"></div>
            <div class="row">
                <h4 class="">Crops</h4>
                @Html.ActionLink("Food Items", "FoodItems", "Crops")
                @Html.ActionLink("Fruits", "Fruits", "Crops")
                @Html.ActionLink("Rice", "Rice", "Crops")
            </div>
            <div class="endLine"></div>
            <div class="row">
                <h4 class="">Electronics</h4>
                @Html.ActionLink("Electronic Products", "ElectronicProducts", "Electronics")
                @Html.ActionLink("Auto Mobiles", "AutoMobiles", "Electronics")
                @Html.ActionLink("Auto Parts", "AutoParts", "Electronics")
            </div>
            <div class="endLine"></div>
            <div class="row">
                <h4 class="">Pharmaceutical</h4>
                @Html.ActionLink("Herbal Medicines", "HerbalMedicines", "Pharmaceutical")
                @Html.ActionLink("Allopathic", "Allopathic", "Pharmaceutical")

            </div>
            <div class="endLine"></div>
            <div class="row">
                <h4 class="">Sports</h4>
                @Html.ActionLink("Sport Materials", "SportMaterial", "Sports")
                @Html.ActionLink("Clothes", "Clothes", "Sports")
            </div>
            <div class="endLine"></div>
            <div class="row">
                <h4 class="">Food & Beverages</h4>
                @Html.ActionLink("Food & Beverages", "FoodBeverage", "FoodBeverage")
            </div>
        </div>

    </div>
</section>