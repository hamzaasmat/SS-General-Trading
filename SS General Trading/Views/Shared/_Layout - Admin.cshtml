            <li><a href="/Galleries"><i class="fa fa-camera-retro"></i> &nbsp;&nbsp;Gallery</a></li>
        </ul>
    </div>



    @*<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
