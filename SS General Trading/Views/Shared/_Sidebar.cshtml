@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" />
</head>
<body>
    <div class="col-md-8">
        @RenderBody()
        
    </div>
    
    <div class="col-md-4 sidebar">
        <div class="endLine"></div>
        <div class="row">
            <h3>Search Product</h3>
            <div class="input-group has-feedback">
                <input type="search" class="form-control" />
                <span class="input-group-addon form-control-feedback"><span class="glyphicon glyphicon-search"></span></span>
            </div>
        </div>
        <div class="endLine"></div>
        <h3>Product Categories</h3>
        <div class="endLine"></div>
        <div class="row">
            <h4 class="">Crops</h4>
            <a href="~/Views/Crops/FoodBeverage.cshtml">Food Beverage</a>
            <a href="~/Views/Crops/FoodItems.cshtml">Food Items</a>
            <a href="~/Views/Crops/Fruits.cshtml">Fruit</a>
            <a href="~/Views/Crops/Rice.cshtml">Rice</a>
        </div>
        <div class="endLine"></div>
        <div class="row">
            <h4 class="">Electronics</h4>
            <a href="~/Views/Electronics/ElectronicProducts.cshtml">Electronic Products</a>
            <a href="~/Views/Electronics/AutoMobiles.cshtml">Auto Mobiles</a>
            <a href="~/Views/Electronics/AutoParts.cshtml">Auto Parts</a>
        </div>
        <div class="endLine"></div>
        <div class="row">
            <h4 class="">Pharmaceutical</h4>
            <a href="~/Views/Pharmaceutical/Allopathic.cshtml">Allopathic Medicines</a>
            <a href="~/Views/Pharmaceutical/HerbalMedicines.cshtml">Herbal Medicines</a>
        </div>
        <div class="endLine"></div>
        <div class="row">
            <h4 class="">Sports</h4>
            <a href="~/Views/Sports/SportMaterial.cshtml">Sport Material</a>
            <a href="~/Views/Sports/Clothes.cshtml">Clothes</a>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#open-sidebar").click(function () {
                $("#hamza").toggleClass("sidebar-op");
            });
        })
    </script>
</body>
</html>
