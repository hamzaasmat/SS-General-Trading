@model SS_General_Trading.Models.Feedback

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/jquery.validate.js"></script>

<style>
    .bgimg {
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
    }

    .bgimg {
        background-image: url('../../Content/images/about.jpg');
        height: 300px;
        margin-top: -130px;
        transform: scale(1.05);
    }

    .about-overlay {
        height: 300px;
        background: -webkit-linear-gradient(bottom left,rgba(28,46,79,.62) 0,rgba(28,46,79,.7) 14.87%,rgba(45,83,123,.6) 100%);
        /*background: linear-gradient(to bottom left,rgba(28,46,79,.62) 0,rgba(28,46,79,.7) 14.87%,rgba(45,83,123,.6) 100%);*/
    }

        .about-overlay h4 {
            text-align: center;
            color: #fff;
            /*position: absolute;*/
            padding-top: 150px;
            font-family: Josefin Sans;
            font-size: 30px;
            z-index: 999;
        }
        #feedback-box{
            margin: 100px auto;
        }
        #feedback-box h1{
            font-family: Josefin Sans;
            font-size: 50px;
            font-weight: 800;
            margin: 60px auto;
            color: #aaa;
        }
        input[type=text]{
            border-radius: 30px;
        }
        input[type=submit]{
            box-shadow: 0 16px 38px -12px rgba(0, 0, 0, 0.56), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2) !important;
            border-radius: 30px;
            background:orangered;
            border: none;
            outline: none;
        }
        input[type=submit]:hover{
            background: orangered;
            opacity: .8;
        }
        textarea{
            height: 200px;
            width: 100%;
            resize: none;
            border-radius: 0px !important;
            border: none;
            border-bottom: 2px solid #aaa;
            text-shadow: none !important;
            outline: none !important;
            padding-top: 0px !important;
        }
        textarea:focus{
             border-bottom: 2px solid red;
        }
        label{
            font-weight: 100;
            color: #555;
        }
        .contact-sec{
            margin-top: 100px;
        }
        .contact-sec h4{
            font-size: 20px;
            color: #444;
            font-weight:700;
            margin:20px auto;
            font-family: Open Sans;
        }
        .contact-sec p{
            font-family: Open Sans;
            color: #aaa;
            margin-bottom: 40px;
        }
</style>
<div class="bgimg">
    <div class="about-overlay">
        <h4>FeedBack<br /><p>Your feedback is important for us</p></h4>
    </div>
</div>

<section id="feedback-box">
    <div class="container">
        <div class="row text-center">
            <h1>You feedback matters most for us !!</h1><hr />
        </div>
        <div class="col-md-4 col-md-offset-2">
            <h2 class="">Send Us a Message</h2>
            <p style="font-size: 15px; color: #aaa; line-height: 28px; font-weight: 100;">
                You can contact us with anything related to our Products. We'll get in touch with you as soon as possible. 
            </p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" id="name">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" id="email">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" id="comment">
                        @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label" })
                        @*@Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control input-lg comments" } })*@
                        @* comment field *@
                        <textarea></textarea>
                        @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input id="success" type="submit" value="Get In Touch" class="btn btn-primary btn-block btn-lg btn-login" />
                        @*<a class="btn btn-primary btn-block btn-lg" onclick="SendEmail()" >click to send email</a>*@
                    </div>

                        @if (TempData["EmailSent"] != null)
                        {
                            <p style="font-size: 20px; color: red;">@TempData["EmailSent"].ToString()</p>
                        }
                    @*<div>
                        @ViewBag.Message
                    </div>*@

                </div>
            }
        </div>
        <div class="col-md-4 contact-sec col-md-offset-1">
            <div class="col-md-2">
                <i class="ion-ios-location" style="font-size: 40px; color: orangered; font-weight: 800;"></i>
            </div>
            <div class="col-md-10">
                <h4>Find us at the office</h4>
                <p>
                    Address: H No. 12, St No. 04, Hussain Street Fateh Sher Road, New Mozang Samanabad
                    Lahore-Pakistan.
                </p>
            </div>
            <div class="col-md-2">
                <i class="ion-ipad" style="font-size: 40px; color: orangered; font-weight: 800;"></i>
            </div>
            <div class="col-md-10">
                <h4>Give us a ring</h4>
                <p>HP: +92-320- 0410192 / 333-1443802</p>
            </div>
            <div class="col-md-2">
                <i class="ion-card" style="font-size: 40px; color: orangered; font-weight: 800;"></i>
            </div>
            <div class="col-md-10">
                <h4>Email us at</h4>
                <p>ssgeneraltrading06@gmail.com</p>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

